<launch>
  <!-- Include Gazebo empty world launch -->
  <include file="$(find-pkg-share gazebo_ros)/launch/empty_world_launch.py">
    <arg name="world_name" value=""/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="verbose" value=""/>
  </include>

  <!-- Set the robot_description parameter -->
  <ros2param name="robot_description" command="$(find-pkg-share xacro)/xacro.py $(find-pkg-share omni_bot)/urdf/main.xacro"/>

  <!-- Spawn the robot model -->
  <node name="spawn_model" pkg="gazebo_ros" type="spawn_model"
    args="-param robot_description -urdf -model wheel" output="screen"/>

  <!-- Load robot parameters from YAML file -->
  <ros2param file="$(find-pkg-share omni_bot)/config/omni_bot.yaml" command="load"/>

  <!-- Spawn controller nodes -->
  <node name="control_spawn" pkg="controller_manager" executable="spawner" respawn="false" ns="omni_bot"
    output="screen">
    <args>joint_state_controller left_wheel_controller right_wheel_controller front_wheel_controller</args>
  </node>

  <!-- Start robot state publisher -->
  <node name="robot_state_publisher" ns="omni_bot" pkg="robot_state_publisher" executable="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/omni_bot/joint_states"/>
  </node>
</launch>